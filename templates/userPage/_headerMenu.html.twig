<!-- Menu Items -->
{% set menuItems = [
    { icon: 'home', text: 'Accueil', color: 'white', service: '' },
    { icon: 'file-alt', text: 'Administratif', color: 'white', service: 'Administratif' },
    { icon: 'calendar-alt', text: 'Agenda', color: 'white', service: 'Agenda' },
    { icon: 'briefcase', text: 'Commercial', color: 'white', service: 'Commercial' },
    { icon: 'laptop-code', text: 'Numérique', color: 'white', service: 'Numerique' },
    { icon: 'phone-alt', text: 'Téléphone', color: 'white', service: 'Telephonique' },
    { icon: 'folder', text: 'Répertoire', color: 'white', service:'Repertoire' },
] %}

    <!-- menus -->

    <div class='d-none d-md-flex flex-wrap justify-content-center'>
        {% if services is defined %}
        {% for item in menuItems | filter(item => item.service is empty or item.service in services) %}
                <div class="header-menu nav-item d-flex flex-column justify-content-center align-items-center p-1 
                    {% if service is defined and item.service == service %} bg-success rounded {% endif %}
                    {% if service is not defined and item.service == '' %} bg-success rounded {% endif %}"                
                    style="position: relative; width: 130px;">
                    <a href={% if item.service is empty %}"{{ path('user') }}"{% else %}"{{ path('dossiers', {'service': item.service}) }}"{% endif %}
                        class="nav-link text-{{ item.color }}" 
                        style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: transparent; border: none; z-index: 1; padding: 0;">
                    </a>    
                    <h6 class="text-white" style="margin: 5px 0;">{{ item.text }}</h6>
                </div>
        {% endfor %}
        {% endif %}
    </div>
    <div class='d-block d-md-none'>
        {% if services is defined %}
        {% for item in menuItems | filter(item => item.service is empty or item.service in services) %}
                <div class="nav-item d-flex flex-column align-items-center p-1
                    {% if service is defined and item.service == service %} bg-success rounded {% endif %}
                    {% if service is not defined and item.service == '' %} bg-success rounded {% endif %}" 
                    style="position: relative; width: 130px;">
                    <a 
                        href={% if item.service is empty %}"{{ path('user') }}"{% else %}"{{ path('dossiers', {'service': item.service}) }}"{% endif %} 
                        class="nav-link text-{{ item.color }}" 
                        style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: transparent; border: none; z-index: 1; padding: 0;">
                    </a>    
                    <h6 class="text-white">{{ item.text }}</h6>
                </div>
        {% endfor %}
        {% endif %}

    </div>


