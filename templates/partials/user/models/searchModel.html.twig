{% if formSearch %}
    {{ form_start(formSearch, {'attr': {'id': 'searchForm'}}) }}
    <div class="mb-3 col-xl-4 d-flex gap-3 w-100 align-items-center" id="fragment" {% if dossier is defined %}data-dossier="{{ dossier.id }}"{% endif %}>
        <div class="input-group mb-0">
            {{ form_widget(formSearch.q, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher...'}}) }}
            {{ form_errors(formSearch.q) }}
        </div>
        <div>
            <button class="btn btn-primary d-flex align-items-center" type="submit" id="button-addon2">
                <span>Filtrer</span>
                <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="ms-2" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 1rem;">
                    <path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path>
                </svg>
            </button>
        </div>
    </div>
    {{ form_end(formSearch) }}
{% endif %}
