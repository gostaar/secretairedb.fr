<div class="modal fade" id="factureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cr√©er une nouvelle Facture</h5>
      </div>
      <div class="modal-body">
        {{ form_start(formViews.addFacture, {'action': path('add_facture'), 'method': 'POST'}) }}
        
        <div class="d-flex">
            {{ form_row(formViews.addFacture.montant) }}
            {{ form_row(formViews.addFacture.date_facture) }}
            {{ form_row(formViews.addFacture.date_paiement) }}
        </div>
        <div class="d-flex">
            {{ form_row(formViews.addFacture.status) }}
            {{ form_row(formViews.addFacture.commentaire) }}
        </div>
            {{ form_row(formViews.addFacture.is_active) }}
            <!-- Ajout de la collection factureLignes -->
            {# <div data-controller="form-collection" 
                data-prototype="{{ form_widget(formViews.addFacture.factureLignes.vars.prototype)|e('html_attr') }}">
            </div> #}

        {{ form_end(formViews.addFacture) }}
      </div>
    </div>
  </div>
</div>
