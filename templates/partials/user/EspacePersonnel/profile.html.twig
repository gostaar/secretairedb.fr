

    <!-- Main Content -->
    <div class="row g-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header mb-2">
                    <h2>Informations personnelles</h2>
                </div>
                <div class="card-body"> 
                {{ form_start(formViews.addUserForm) }}
                    <div class="row d-flex">
                        {% set personal_info = [
                            {'id': 'nom',},
                            {'id': 'adresse'},
                            {'id': 'codePostal'},
                            {'id': 'ville'},
                            {'id': 'pays'},
                            {'id': 'telephone'},
                            {'id': 'mobile'},
                            {'id': 'email'}
                        ] %}
                        {% for field in personal_info %}
                            <div class="col-md-4 mb-3">
                                {{ form_row(attribute(formViews.addUserForm, field.id)) }}
                            </div>
                        {% endfor %}
                        <div class='d-flex justify-content-center'>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header mb-2">
                    <h2>Facturation</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% set entreprise_info = [
                            {'id': 'siret',},
                            {'id': 'nomEntreprise'},
                        ] %}
                        {% for field in entreprise_info %}
                            <div class="col-md-4 mb-3">
                                {{ form_row(attribute(formViews.addUserForm, field.id)) }}
                            </div>
                        {% endfor %}
                        <div class='d-flex justify-content-center mb-3'>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                        {{ form_end(formViews.addUserForm) }}
                    </div>

                    <p class="text-danger border-top pt-3">Services choisis:</p>
                    <ul>
                        {% for s in services %}
                            <li>{{ s }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

       <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header mb-2 d-flex justify-content-between align-items-center">
                    <h2>Identifiants et mots de passe</h2>
                    <a href="/export-identifiants" class="btn btn-primary">Exporter</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Site</th>
                                    <th>Identifiant</th>
                                    <th>Mot de passe</th>
                                </tr>
                            </thead>
                            <tbody>
                            
                            {% if identifiants is empty %}
                                <tr>
                                    <td colspan="3" class="text-center">Pas d'identifiants actuellement</td>
                                </tr>
                            {% else %}
                                {% for identifiant in identifiants %}
                                <tr>
                                    <td>{{ identifiant.site }}</td>
                                    <td>{{ identifiant.identifiant }}</td>
                                    <td>{{ identifiant.password }}</td>
                                </tr>    
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#identifiantModal">
                                Ajouter un identifiant
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

